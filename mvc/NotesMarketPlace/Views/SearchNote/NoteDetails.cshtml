<!-- note detail section-->
<section id="note-detail">
    <div class="content-box">
        <div class="container">
            <div class="row">

                <!-- note details left -->
                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
                    <div class="row">
                        <!-- Note details image -->
                        <div class="col-xl-5 col-lg-5 col-md-5 col-sm-5 col-12">
                            <div class="note-detail-img">
                                <h4>Notes Details</h4>
                                <img src="~/Content/image/notedetails/1.jpg" alt="image of note">
                            </div>
                        </div>

                        <!-- details of notes -->
                        <div class="col-xl-7 col-lg-7 col-md-7 col-sm-7 col-12">
                            <div class="note-info">
                                <h4>@Model.Title</h4>
                                <h6>@Model.Category</h6>
                                <p>@Model.Description</p>

                                @if (Model.IsPaid)
                                {
                                    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#confirmationbox">DOWNLOAD/$@Model.SellingPrice</button>

                                }
                                else
                                {
                                    @Html.ActionLink("DOWNLOAD/$0", "Download", "SearchNote", new { noteId = Model.ID, userId = Model.SellerID }, new { @class = "btn btn-primary btn-lg", type = "button" })
                                }


                            </div>
                        </div>
                    </div>
                </div>

                <!-- note details right -->
                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
                    <div class="note-details">
                        <ul class="note-full-detail">
                            <li>institution:<span>@Model.UniversityName</span></li>
                            <li>Country:<span>1</span></li>
                            <li>Course Name<span>@Model.Course</span></li>
                            <li>Course Code:<span>@Model.CourseCode</span></li>
                            <li>Professor:<span>@Model.Professor</span></li>
                            <li>Number of Pages:<span>@Model.NumberofPages</span></li>
                            <li>Approved Date:<span>November 25 2020</span></li>
                            <li>Rating:<span><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star-o"></i>100 Reviews</span></li>
                            <li>5 Users make this note as inappropriate</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
