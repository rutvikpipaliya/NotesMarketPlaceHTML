<!-- Work section -->
<section id="home-work">
    <div class="content-box">
        <div class="container">

            <!-- work heading -->
            <div class="row">
                <div class="col-lg-12 col-xl-12 col-md-12 col-sm-12 col-12 text-center">
                    <div id="home-work-heading">
                        <p>How it Works</p>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- left side -->
                <div class="col-lg-6 col-xl-6 col-md-6 col-sm-6 col-12 text-center">
                    <div id="home-work-left">
                        <div class="work-img">
                            <img src="~/Content/image/homepage/download.png" alt="download">
                        </div>
                        <h5>Download Free/Paid Notes</h5>
                        <p>Get Material for your <br>Cource etc.</p>
                        <div id="work-button-download">                            
                                @Html.ActionLink("Download", "SearchNotes", "SearchNote", null , new { @class = "btn btn-work", title = "Download" })
                        </div>
                    </div>
                </div>
                <!-- right side -->
                <div class="col-lg-6 col-xl-6 col-md-6 col-sm-6 col-12 text-center">
                    <div id="home-work-right">
                        <div class="work-img">
                            <img src="~/Content/image/homepage/seller.png" alt="download">
                        </div>
                        <h5>Seller</h5>
                        <p>Upload and Download Cource <br>and Material etc.</p>
                        <div id="work-button-seller">
                            @if (Session["ID"] != null)
                            {                                
                                @Html.ActionLink("Sell Book", "Dashboard", "SellNotes", null, new { @class = "btn btn-work", title = "sell book" })
                            }
                            else
                            {
                                @Html.ActionLink("Sell Book", "Login", "Account", null, new { @class = "btn btn-work", title = "sell book" })
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End of work section -->

